<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent">

    <android.support.constraint.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgStud"
            android:layout_width="109dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/friendship" />

        <ImageView
            android:id="@+id/imgProfpic"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgStud"
            app:layout_constraintTop_toBottomOf="@+id/txtJudul"
            app:srcCompat="@drawable/nas" />

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Judul Artikel"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/imgStud"
            app:layout_constraintStart_toStartOf="@+id/imgStud"
            app:layout_constraintTop_toBottomOf="@+id/imgStud" />

        <TextView
            android:id="@+id/txtPenulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="52dp"
            android:text="Penulis"
            android:textColor="@color/colorPrimary"
            android:textSize="7sp"
            app:layout_constraintEnd_toEndOf="@+id/txtJudul"
            app:layout_constraintTop_toBottomOf="@+id/txtJudul" />

        <TextView
            android:id="@+id/txtContrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contributor"
            android:textColor="@color/colorPrimary"
            android:textSize="5sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfpic"
            app:layout_constraintStart_toStartOf="@+id/txtPenulis"
            app:layout_constraintTop_toBottomOf="@+id/txtPenulis" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="45dp"
            android:layout_height="9dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Hari, Tgl/Bulan/Thn"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="4sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgStud"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtContrib"
            app:layout_constraintTop_toBottomOf="@+id/txtJudul"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

